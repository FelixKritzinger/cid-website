---
const projects = [
  {
    title: 'Island Organic Modern',
    href: '/projects/island-orgo',
    image: '/Island_Orgo_Modern.jpg'
  },
  {
    title: 'Lake Norman Indoor-Outdoor Living Remodel',
    href: '/projects/lkn-indoor-outdoor',
    image: '/LKN_Indoor_Outdoor.jpg'
  },
  {
    title: 'Maine Cottage Inspired Sunroom Addition',
    href: '/projects/maine-cottage-sunroom',
    image: '/Maine_Cottage_Sunroom.jpg'
  },
  {
    title: 'Lake Norman - Nature Inspired Bathroom',
    href: '/projects/lkn-nature-bath',
    image: '/LKN_Nature_Bath.jpg'
  },
  {
    title: 'Lake Norman Cottage Remodel',
    href: '/projects/lkn-cottage',
    image: '/LKN_Cottage.jpg'
  },
  {
    title: 'Cornelius Primary Bathroom Remodel',
    href: '/projects/cornelius-bath',
    image: '/Cornelius_Bath.jpg'
  },
  {
    title: 'Huntersville Home Office for Two',
    href: '/projects/office-42',
    image: '/Huntersville_Office.jpg'
  },
  {
    title: 'TBD',
    href: '/projects',
    image: '/TBA_Project.jpg'
  },
];
---

<style>
  .grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: clamp(1rem, 2vw, 2rem);
    width: 100%;
    margin: 0 auto;
    padding: 2rem 4rem;
    box-sizing: border-box;
  }

  .project {
    position: relative;
    overflow: hidden;
    max-width: 100%;
    display: block;
    text-decoration: none;
    color: inherit;
    border-radius: 0;
  }

  .project img {
    border-radius: 0;
    width: 100%;
    height: 100%;
    display: block;
    transition: transform 0.3s ease;
  }

  .hover-card__overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.6);
    opacity: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
    padding: 1rem;
    text-align: center;
  }

  .hover-card__text {
    font-size: clamp(0.8rem, 1.5vw, 1.6rem);
    color: white;
    font-weight: 300;
    pointer-events: none;
  }

  .hover-card:hover img {
    transform: scale(1.0);
  }

  .hover-card:hover .hover-card__overlay {
    opacity: 1;
  }

  .coming-soon-overlay {
    position: absolute;
    inset: 0;
    background: rgba(30, 30, 30, 0.85);
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: clamp(1rem, 2vw, 2rem);
    font-weight: 200;
    text-align: center;
  }
</style>

<div class="grid">
  {projects.map((project, index) => (
    index === 7 ? (
      <div class="project">
        <img src={project.image} alt={project.title} />
        <div class="coming-soon-overlay">More Coming Soon</div>
      </div>
    ) : (
      <a class="project hover-card" href={project.href}>
        <img class="hover-card__image" src={project.image} alt={project.title} />
        <div class="hover-card__overlay">
          <div class="hover-card__text">{project.title}</div>
        </div>
      </a>
    )
  ))}
</div>
