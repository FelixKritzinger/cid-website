  {
    title: 'Modern Living Room',
    href: '/projects/living-room',
    image: '/Edited font elevation with palm tree.jpg'
  },
  {
    title: 'Elegant Kitchen',
    href: '/projects/kitchen',
    image: '/Edited font elevation with palm tree.jpg'
  },
