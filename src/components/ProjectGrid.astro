  },
  {
    title: 'Cozy Bedroom',
    href: '/projects/bedroom',
    image: '/images/bedroom.jpg'
  },
  {
    title: 'Luxury Bathroom',
    href: '/projects/bathroom',
    image: '/images/bathroom.jpg'
  },
  {
    title: 'Home Office',
    href: '/projects/office',
    image: '/images/office.jpg'
