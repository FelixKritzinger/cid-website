---
import BaseHead from '../components/BaseHead.astro';

const { title, description, image } = Astro.props;

const navLinks = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Our Work', href: '/projects' },
  { name: 'Reviews', href: '/reviews' },
];
---

<html lang="en">
  <head>
    <BaseHead {title} {description} {image} />
    <style>
      @font-face {
        font-family: 'Montserrat';
        src: url('/fonts/Montserrat-Medium.woff') format('woff');
        font-weight: 500;
        font-style: normal;
        font-display: swap;
      }

      * {
        box-sizing: border-box;
      }

      


      body {
        margin: 0;
        font-family: 'Montserrat', sans-serif;
        background: #f5f5f5;
        color: #222;
      }

      .site-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 5%;
        background: #f0f0f0;
        color: #000;
        flex-wrap: wrap;
        position: relative;
      }

      .logo {
        display: flex;
        align-items: center;
      }

      .logo img {
        height: 10vh;
        width: auto;
      }

      .navigation {
        display: flex;
        gap: 1.5rem;
      }

      .navigation a {
        color: #000;
        text-decoration: none;
        font-weight: 500;
        font-size: 1.1rem;
      }

      .navigation a:hover {
        text-decoration: underline;
      }

      .hamburger {
        display: none;
        background: none;
        border: none;
        font-size: 1.8rem;
        cursor: pointer;
      }

      .dropdown-menu {
        display: none;
        flex-direction: column;
        position: absolute;
        top: 100%;
        right: 5%;
        background: #f0f0f0;
        border: 1px solid #ccc;
        border-radius: 6px;
        padding: 1rem 1.5rem;
        gap: 1rem;
        z-index: 100;
        min-width: 150px;
      }

      .dropdown-menu a {
        font-weight: 500;
        color: #000;
        font-size: 1.1rem;
        text-decoration: none;
      }

      .dropdown-menu a:hover {
        text-decoration: underline;
      }

      .dropdown-menu.open {
        display: flex;
      }

      @media (max-width: 1024px) {
        .site-header {
          padding: 1rem 3%;
        }
      }

      @media (max-width: 768px) {
        .site-header {
          flex-direction: row;
          align-items: center;
          padding: 1rem 5%;
        }

        .logo img {
          height: 50px;
        }

        .navigation {
          display: none;
        }

        .hamburger {
          display: block;
        }
      }

      .site-main {
        width: 100%;
        padding: 0 5%;
      }

      @media (max-width: 768px) {
        .site-main {
          padding: 0 3%;
        }
      }
    </style>
  </head> 
  

  <body>
    <header class="site-header">
      <div class="logo">
        <a href="/">
          <img src="/CID Website Logo.png" alt="Site Logo" />
        </a>
      </div>

      <nav class="navigation">
        {navLinks.map((link) => (
          <a href={link.href}>{link.name}</a>
        ))}
      </nav>

      <button
        class="hamburger"
        aria-label="Toggle navigation menu"
        aria-expanded="false"
        id="hamburgerBtn"
        type="button"
      >
        ☰
      </button>

      <div
        class="dropdown-menu"
        id="dropdownMenu"
        role="menu"
        aria-hidden="true"
      >
        {navLinks.map((link) => (
          <a href={link.href} role="menuitem" tabindex="0">{link.name}</a>
        ))}
      </div>
    </header>

    <main class="site-main">
      <slot />
    </main>

    <script>
      const hamburgerBtn = document.getElementById('hamburgerBtn');
      const dropdownMenu = document.getElementById('dropdownMenu');

      hamburgerBtn.addEventListener('click', () => {
        const isOpen = dropdownMenu.classList.toggle('open');

        if (isOpen) {
          hamburgerBtn.innerHTML = '×';
          hamburgerBtn.setAttribute('aria-expanded', 'true');
          dropdownMenu.setAttribute('aria-hidden', 'false');
        } else {
          hamburgerBtn.innerHTML = '☰';
          hamburgerBtn.setAttribute('aria-expanded', 'false');
          dropdownMenu.setAttribute('aria-hidden', 'true');
        }
      });
    </script>

    
