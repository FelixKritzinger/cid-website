---
import BaseHead from '../components/BaseHead.astro';

const { title, description, image } = Astro.props;

const navLinks = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Our Work', href: '/projects' },
  { name: 'Reviews', href: '/reviews' },
];
---

<html lang="en">
  <head>
    <BaseHead {title} {description} {image} />
    <style>
      /* Load Montserrat variable font */
      @font-face {
        font-family: 'Montserrat Variable';
        src: url('/fonts/Montserrat-VariableFont_wght.woff') format('woff');
        font-weight: 100 900;
        font-style: normal;
        font-display: swap;
      }

      body {
        margin: 0;
        font-family: 'Montserrat Variable', sans-serif;
        font-weight: 600;
        background: #f5f5f5;
        color: #000000;
      }

      .site-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1.2rem 2rem;
        background: #f0f0f0;
        color: #000000;
        font-weight: 600;
        flex-wrap: wrap;
      }

      .logo {
        max-width: 200px;
        width: 100%;
      }

      .logo img {
        height: auto;
        max-height: 80px;
        max-width: 100%;
        width: auto;
        display: block;
      }

      .navigation {
        display: flex;
        gap: 1rem;
      }

      .navigation a {
        color: #000000;
        text-decoration: none;
        font-weight: 400;
      }

      .navigation a:hover {
        text-decoration: underline;
      }

      .site-main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 20px;
      }

      .slideshow-container {
        width: calc(100vw - 80px);
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: calc(-50vw + 40px);
        margin-right: calc(-50vw + 40px);
        box-sizing: border-box;
      }

      /* Responsive for small screens and portrait orientation */
      @media (max-width: 600px), (orientation: portrait) {
        .site-header {
          flex-direction: column;
          align-items: center;
          padding: 1rem;
        }

        .logo {
          max-width: 150px;
          width: 100%;
          margin-bottom: 1rem;
          text-align: center;
        }

        .navigation {
          flex-direction: row;
          flex-wrap: wrap;
          justify-content: center;
          gap: 1rem;
          width: 100%;
          margin-bottom: 0;
        }

        .navigation a {
          font-size: 0.9rem;
          white-space: normal;
        }
      }
    </style>
  </head>
  <body>
    <header class="site-header">
      <div class="logo">
        <a href="/">
          <img src="/blog-placeholder-2.jpg" alt="Site Logo" />
        </a>
      </div>
      <nav class="navigation">
        {navLinks.map((link) => (
          <a href={link.href}>{link.name}</a>
        ))}
      </nav>
    </header>

    <main class="site-main">
      <div class="slideshow-container">
        <slot />
      </div>
    </main>
  </body>
</html>
