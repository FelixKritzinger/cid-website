---
import BaseHead from '../components/BaseHead.astro';

const { title, description, image } = Astro.props;

const navLinks = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Our Work', href: '/projects' },
  { name: 'Reviews', href: '/reviews' },
];
---

<html lang="en">
  <head>
    <BaseHead {title} {description} {image} />
  </head>
  <body>
    <header class="site-header">
      <div class="logo">
        <a href="/">
          <img src="/blog-placeholder-2.jpg" alt="Site Logo" />
        </a>
      </div>
      <nav class="navigation">
        {navLinks.map((link) => (
          <a href={link.href}>{link.name}</a>
        ))}
      </nav>
    </header>

    <main class="site-main">
      <div class="slideshow-container">
        <slot />
      </div>
      <!-- Other main content can go here -->
    </main>

    <style>
      body {
        margin: 0;
        font-family: sans-serif;
        background: #f5f5f5;
        color: #222;
        /* No horizontal padding here */
      }

      .site-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.5rem 1rem; /* full width with internal padding */
        background: #111;
        color: #fff;
        margin: 0; /* no margin */
      }

      .logo img {
        height: 40px;
        width: auto;
      }

      .navigation {
        display: flex;
        gap: 1rem;
      }

      .navigation a {
        color: #fff;
        text-decoration: none;
        font-weight: 500;
      }

      .navigation a:hover {
        text-decoration: underline;
      }

      .site-main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 20px; /* add side padding here */
      }

      /* Breakout container for slideshow with side margins */
      .slideshow-container {
        width: calc(100vw - 40px); /* full viewport width minus site-main horizontal padding */
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: calc(-50vw + 20px);
        margin-right: calc(-50vw + 20px);
        box-sizing: border-box;
      }

      @media (max-width: 600px) {
        .navigation {
          flex-direction: column;
          align-items: flex-end;
        }
      }
    </style>
  </body>
</html>
