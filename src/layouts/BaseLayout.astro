---
import BaseHead from '../components/BaseHead.astro';

const { title, description, image } = Astro.props;

const navLinks = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Our Work', href: '/projects' },
  { name: 'Reviews', href: '/reviews' },
];
---

<html lang="en">
  <head>
    <BaseHead {title} {description} {image} />
    <style>
      /* Load Montserrat Medium font */
      @font-face {
        font-family: 'Montserrat';
        src: url('/fonts/Montserrat-Medium.woff') format('woff');
        font-weight: 500;
        font-style: normal;
        font-display: swap;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: 'Montserrat', sans-serif;
        background: #f5f5f5;
        color: #222;
      }

      .site-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 5%;
        background: #f0f0f0;
        color: #000;
        flex-wrap: wrap;
      }

      .logo {
        display: flex;
        align-items: center;
      }

      .logo img {
        height: 80px;
        width: auto;
      }

      .navigation {
        display: flex;
        gap: 1.5rem;
      }

      .navigation a {
        color: #000;
        text-decoration: none;
        font-weight: 500;
        font-size: 1.1rem;
      }

      .navigation a:hover {
        text-decoration: underline;
      }

      .site-main {
        width: 100%;
        padding: 2rem 5%;
      }

      .slideshow-container {
        width: 100%;
        padding: 0;
        margin: 0 auto;
      }

      /* Responsive adjustments for medium screens */
      @media (max-width: 1024px) {
        .site-header {
          padding: 1rem 3%;
        }

        .site-main {
          padding: 2rem 3%;
        }
      }

      /* Responsive for small screens (phones) */
      @media (max-width: 768px) {
        .site-header {
          flex-direction: column;
          align-items: center;
          text-align: center;
          padding: 1rem 5%;
        }

        .logo img {
          height: 50px;
          margin-bottom: 0.5rem;
        }

        .navigation {
          flex-direction: column;
          align-items: center;
          gap: 0.75rem;
        }

        .navigation a {
          font-size: 1rem;
        }

        .site-main {
          padding: 1rem 5%;
        }
      }
    </style>
  </head>

  <body>
    <header class="site-header">
      <div class="logo">
        <a href="/">
          <img src="/cid_logo.jpg" alt="Site Logo" />
        </a>
      </div>

      <nav class="navigation">
        {navLinks.map((link) => (
          <a href={link.href}>{link.name}</a>
        ))}
      </nav>
    </header>

    <main class="site-main">
      <div class="slideshow-container">
        <slot />
      </div>
    </main>
  </body>
</html>
