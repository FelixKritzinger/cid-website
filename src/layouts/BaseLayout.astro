---
import BaseHead from '../components/BaseHead.astro';

const { title, description, image } = Astro.props;

const navLinks = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Our Work', href: '/projects' },
  { name: 'Reviews', href: '/reviews' },
];
---

<html lang="en">
  <head>
    <BaseHead {title} {description} {image} />
    <style>
      /* Load Montserrat variable font */
      @font-face {
        font-family: 'Montserrat Variable';
        src: url('/fonts/Montserrat-VariableFont_wght.woff') format('woff');
        font-weight: 100 900;
        font-style: normal;
        font-display: swap;
      }

      body {
        margin: 0;
        font-family: 'Montserrat Variable', sans-serif;
        font-weight: 600;
        background: #f5f5f5;
        color: #222;
      }

      .site-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.5rem 1rem;
        background: #d3d3d3;
        color: #fff;
        margin: 0;
      }

      .logo img {
        height: 40px;
        width: auto;
      }

      .navigation {
        display: flex;
        gap: 1rem;
      }

      .navigation a {
        color: #fff;
        text-decoration: none;
        font-weight: 800; /* medium weight */
      }

      .navigation a:hover {
        text-decoration: underline;
      }

      .site-main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 20px;
      }

      .slideshow-container {
        width: calc(100vw - 80px);
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: calc(-50vw + 40px);
        margin-right: calc(-50vw + 40px);
        box-sizing: border-box;
      }

      @media (max-width: 600px) {
        .navigation {
          flex-direction: column;
          align-items: flex-end;
        }
      }
    </style>
  </head>
  <body>
    <header class="site-header">
      <div class="logo">
        <a href="/">
          <img src="/blog-placeholder-2.jpg" alt="Site Logo" />
        </a>
      </div>
      <nav class="navigation">
        {navLinks.map((link) => (
          <a href={link.href}>{link.name}</a>
        ))}
      </nav>
    </header>

    <main class="site-main">
      <div class="slideshow-container">
        <slot />
      </div>
    </main>
  </body>
</html>
