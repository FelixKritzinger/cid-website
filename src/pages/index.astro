---
import BaseLayout from '../layouts/BaseLayout.astro';
import Slideshow from '../components/Slideshow.astro';
import ProjectGrid from '../components/ProjectGrid.astro';
---

<BaseLayout title="Home" description="Welcome to Collaborative Interior Design.">
  <Slideshow />

  <style>
    @font-face {
      font-family: 'MontserratMedium';
      src: url('/fonts/Montserrat-Medium.woff') format('woff');
      font-weight: 500;
      font-style: normal;
      font-display: swap;
    }

    @font-face {
      font-family: 'Montserrat';
      src: url('/fonts/Montserrat-Regular.woff2') format('woff2');
      font-weight: 500;
      font-style: normal;
      font-display: swap;
    }

    img {
      border: 0;
      outline: none;
      border-radius: 0;
    }

    .two-column-section {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: center;
      gap: 4rem;
      max-width: 90vw;
      margin: 4rem auto;
    }

    .two-column-section__image {
      max-height: 70dvh;
      height: auto;
      width: auto;
      max-width: 35vw;
    }

    .two-column-section__content {
      font-family: 'Montserrat', sans-serif; 
      flex: 1 1 45%;
      max-width: 40vw;
      padding-left: 1rem;
      color: #333;
      text-align: left;
    }

    .two-column-section__content h2 {
      font-family: 'MontserratMedium', sans-serif;
      letter-spacing: 0.1em;
      //font-size: clamp(0.25rem, 1.4vw, 4.5rem);
      font-size: clamp(.25rem, 1.3*(.6rem + .35dvw + .2dvh), 4.25rem);
      font-weight: 300;
      margin-bottom: 1rem;
      color: #000;
    }

    .two-column-section__content p {
      //font-size: clamp(0.25rem, .95vw, 2.5rem);
      font-size: clamp(.25rem, .6rem + .35dvw + .2dvh, 4.25rem);
      line-height: 1.6;
      margin-bottom: 2rem;
      color: #666;
    }

    .badges {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      justify-content: flex-start;
    }

    .badges__item img {
      height: clamp(1.75rem, 4.5vw, 4.75rem);
      width: auto;
      display: block;
    }

    .who-we-are {
      background-color: #464646;
      color: #fff;
      width: 100%;
      max-width: 91vw;
      margin: 3rem auto;
      height: clamp(4rem, 20vw, 40rem);
      min-height: 4rem;
      max-height: 40rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      gap: 1.5rem;
      padding: 1.5rem;
      box-sizing: border-box;
    }

    .who-we-are h2 {
      letter-spacing: 0.1em;
      font-family: 'Montserrat', sans-serif;
      font-size: clamp(1rem, 2vw, 3rem);
      margin: 0;
      font-weight: 100;
      color: #fff;
    }

    .who-we-are p {
      letter-spacing: 0.075em;
      font-family: 'Montserrat', sans-serif;
      font-size: clamp(0.6rem, 1.8vw, 1.5rem);
      max-width: 70vw;
      margin: 0 auto;
      line-height: 1.6;
      color: #fff;
    }

    @media (max-width: 768px) {
      .two-column-section {
        flex-direction: column;
        text-align: center;
      }

      .two-column-section__image {
        max-width: 80vw;
        height: auto;
      }

      .two-column-section__content {
        flex: 1 1 45%;
        max-width: 80vw;
        padding-left: 1rem;
        color: #333;
        text-align: left;
      }

      .two-column-section__content h2 {
        font-size: clamp(0.5rem, 2.6vw, 3.5rem);
      }

      .two-column-section__content p {
        font-size: clamp(0.25rem, 2vw, 3rem);
      }

      .badges {
        justify-content: center;
      }

      .who-we-are {
        height: auto;
        padding: 3rem 1.5rem;
      }
    }
  </style>

  <!-- "Who We Are" gray box -->
  <section class="who-we-are">
    <h2>WHAT WE DO</h2>
    <p>
      Your home should be a place that looks and feels like a physical expression of you and your family. We help you translate your dreams and ideas into design that is personal.
    </p>
  </section>

  <!-- "Create Your Dream Home" section -->
  <section class="two-column-section">
