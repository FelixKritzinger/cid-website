---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="About" description="Learn more about Collaborative Interior Design.">
  <style>
    @font-face {
      font-family: 'MontserratMedium';
      src: url('/fonts/Montserrat-Medium.woff') format('woff');
      font-weight: 500;
      font-style: normal;
      font-display: swap;
    }

    @font-face {
      font-family: 'MontserratLight';
      src: url('/fonts/Montserrat-Light.woff2') format('woff2');
      font-weight: 300;
      font-style: normal;
      font-display: swap;
    }

    @font-face {
      font-family: 'MontserratLightItalic';
      src: url('/fonts/Montserrat-LightItalic.woff2') format('woff2');
      font-weight: 300;
      font-style: normal;
      font-display: swap;
    }

    @font-face {
      font-family: 'MontserratRegular';
      src: url('/fonts/Montserrat-Regular.woff2') format('woff2');
      font-weight: 300;
      font-style: normal;
      font-display: swap;
    }

    @font-face {
      font-family: 'MontserratItalic';
      src: url('/fonts/Montserrat-Italic.woff2') format('woff2');
      font-weight: 300;
      font-style: normal;
      font-display: swap;
    }

    .hero-section {
      margin-top: 2rem;
      position: relative;
      width: 100%;
      height: 50vh;
      background-image: url('/Who_We_Are.jpg');
      background-size: cover;
      background-position: center;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #fff;
      text-align: center;
    }

    .hero-overlay {
      position: absolute;
      inset: 0;
      background: rgba(25, 25, 25, 0.6);
      z-index: 1;
    }

    .hero-content {
      position: relative;
      z-index: 2;
      padding: 2rem;
    }

    .hero-content h1 {
      color: #fff;
      font-family: 'MontserratRegular', sans-serif;
      font-size: clamp(2rem, 2vw, 4rem);
      font-weight: 300;
      letter-spacing: 0.1em;
      margin-bottom: 0.5rem;
    }

    .hero-content p {
      font-family: 'MontserratRegular', sans-serif;
      font-size: clamp(1rem, 1.25vw, 2rem);
      letter-spacing: 0.1em;
      font-weight: 300;
    }

    .two-column-section {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: center;
      gap: 4rem;
      max-width: 90vw;
      margin: 2.5rem auto;
    }

    .two-column-section__image {
      max-height: 70vh;
      border-radius:0px;
      height: auto;
      width: auto;
      max-width: 35vw;
    }

    .two-column-section__content {
      flex: 1 1 45%;
      max-width: 49vw;
      padding-left: 1rem;
      color: #333;
      text-align: left;
    }

    .two-column-section__content h2 {
      font-family: 'MontserratMedium', sans-serif;
      letter-spacing: 0.1em;
      font-size: clamp(.25rem, 1.3*(.6rem + .35dvw + .2dvh), 4.25rem);
      font-weight: 300;
      margin-bottom: 1rem;
      color: #000;
    }

    .two-column-section__content p {
      font-family: 'MontserratRegular', sans-serif;
      font-size: clamp(.25rem, .6rem + .35dvw + .2dvh, 4.25rem);
      line-height: 1.6;
      margin-bottom: 2rem;
      color: #555;
    }

    .badges {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      justify-content: flex-start;
    }

    .badges__item img {
      height: clamp(1.75rem, 5vw, 4.75rem);
      border-radius:0px;
      width: auto;
      display: block;
    }

    .reviews-section h2 {
      margin-top: 3rem;
      font-family: 'MontserratRegular', sans-serif;
      font-size: clamp(.25rem, 1.4*(.6rem + .35dvw + .2dvh), 4.25rem);
      font-weight: 300;
      letter-spacing: 0.1em;
    }


    .reviews-section {
      max-width: 90vw;
      margin: 5rem auto;
      text-align: center;
    }

    .slideshow {
      position: relative;
      width: 100%;
      overflow: hidden;
      display: flex;
      flex-direction: column; /* stack title + slides vertically */
      align-items: center;
      background-color: #f8f8f8;  /* unified background */
      border-radius: 0rem;
      padding: 2rem 1.5rem 3rem;
      box-sizing: border-box;
    }

    /* Move title styling inside slideshow */
    .slideshow-title {
      font-size: clamp(.25rem, 1.3*(.6rem + .35dvw + .2dvh), 4.25rem);
      font-weight: 300;
      color: #222;
      font-family: 'MontserratRegular', sans-serif;
      letter-spacing: 0.05em;
      user-select: none;
    }

    .slides {
      display: flex;
      transition: transform .5s ease-in-out;
      width: 100%;
      will-change: transform;
    }

    .slide {
      width: 100%;
      flex-shrink: 0;
      padding: 1rem;
      background-color: transparent; /* inherit from slideshow */
      border-radius: 0rem;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      color: #333;
    }

    .stars {
      color: #f5c518;
      font-size: 2rem;
      margin-bottom: 1.5rem;
    }

    .review-text {
      display: block;
      font-family: 'MontserratItalic', sans-serif;
      font-size: clamp(.25rem, (.6rem + .35dvw + .2dvh), 4.25rem);
      line-height: 1.6;
      color: #333;
      max-width: 60vw;
    }

    @media (max-width: 1300px) {
      .review-text {
        max-width:70vw;
      }
    }

    .arrow {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: none;
      border: none;
      padding: 0;
      cursor: pointer;
      z-index: 100;
      color: #222;
    }

    .arrow svg.carousel-arrow {
      width: 2rem;
      height: 2rem;
      fill: currentColor;
    }


    .arrow.left { left: 30px; }
    .arrow.right { right: 30px; }

    @media (max-width: 768px) {
      .slide {
        padding: 1.5rem;
      }

      .two-column-section {
        flex-direction: column;
        text-align: center;
      }

      .two-column-section__image {
        max-width: 80vw;
        height: auto;
      }

      .two-column-section__content {
        max-width: 80vw;
        text-align: left;
      }

      .badges {
        justify-content: center;
      }
    }
  </style>

